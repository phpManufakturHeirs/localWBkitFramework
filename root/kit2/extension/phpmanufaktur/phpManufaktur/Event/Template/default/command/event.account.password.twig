{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'kitcommand/iframe.body.twig') %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Event/Template/default/command/css/event.login.css" media="screen, projection" />
{% endblock stylesheet %}
{% block content %}
  {{ parent() }}
  <div class="event_form">
    <h2>{{ 'Forgot your password?'|trans }}?</h2>
    <p>{{ 'We send you a new password to your email address.'|trans }}</p>
    <form action="{{ route.form_action }}" method="post">
      {{ form_widget(form) }}     
      <div>
        <label for="submit">&nbsp;</label>
        <input type="submit" name="submit" />
      </div>
      <div class="clear"></div>
    </form>
  </div>
{% endblock %}
{% block footer %}
  {{ parent() }} 
{% endblock footer %} 