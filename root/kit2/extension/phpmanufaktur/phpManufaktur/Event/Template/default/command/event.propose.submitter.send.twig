{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'kitcommand/iframe.body.twig') %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Event/Template/default/command/css/event.propose.css" media="screen, projection" />
  <link href="{{ LIBRARY_URL ~ '/font-awesome/latest/css/font-awesome.min.css' }}" rel="stylesheet">    
{% endblock stylesheet %}
{% block content %}
  <!-- {{ _self.getTemplateName() }} -->  
  {% if app.translator.locale == 'de' %}
    {# german translation #}
    <h2>Aktivierungslink versendet</h2>
    {{ parent() }}
    {% if basic.message|length < 1 %}
      <div class="iframe_content message">
        <p>Wir haben Ihnen einen Aktivierungslink an Ihre E-Mail Adresse geschickt, bitte best√§tigen Sie diesen.</p>
      </div>
    {% endif %}    
  {% else %}
    {# english language #}
    <h2>Activationlink send</h2>
    {{ parent() }}
    {% if basic.message|length < 1 %}
      <div class="iframe_content message">
        <p>We send you an activation link to your email address. Please confirm us the event and the submitted event data.</p>
      </div>
    {% endif %}
  {% endif %}
{% endblock %}
