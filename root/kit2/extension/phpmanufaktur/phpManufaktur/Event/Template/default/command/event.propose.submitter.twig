{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'kitcommand/iframe.body.twig') %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Event/Template/default/command/css/event.propose.css" media="screen, projection" />
  <link href="{{ LIBRARY_URL ~ '/font-awesome/latest/css/font-awesome.min.css' }}" rel="stylesheet">    
{% endblock stylesheet %}
{% block content %}
  <!-- {{ _self.getTemplateName() }} -->  
  {% if app.translator.locale == 'de' %}
    {# german translation #}
    <h2>Veranstaltung bestätigen</h2>
    {{ parent() }}
    {% if basic.message|length < 1 %}
      <div class="iframe_content message">
        <p>Wir senden Ihnen einen Aktivierungslink an Ihre E-Mail Adresse. Bitte bestätigen Sie uns mit diesem Link die Veranstaltung und die übermittelten Daten.</p>
        
      </div>
    {% endif %}    
  {% else %}
    {# english language #}
    <h2>Confirm event</h2>
    {{ parent() }}
    {% if basic.message|length < 1 %}
      <div class="iframe_content message">
        <p>We send you an activation link to your email address. Please confirm us the event and the submitted event data.</p>
      </div>
    {% endif %}
  {% endif %}
  <div class="contact_form">
    <form action="{{ FRAMEWORK_URL ~ route.submitter.confirm ~ '?pid=' ~ basic.pid }}" method="post">
      {{ form_widget(form) }}
      <div>
        <label for="submit">&nbsp;</label>
        <input type="submit" name="submit" />
      </div>
      <div class="clear"></div>
    </form>
  </div>
{% endblock %}
