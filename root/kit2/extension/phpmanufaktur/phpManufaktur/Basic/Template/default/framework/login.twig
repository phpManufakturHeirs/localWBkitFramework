{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'framework/body.twig') %}
{% block title %}{{ 'Login - kitFramework'|trans }}{% endblock %}

{% block content %}
  <!-- {{ _self.getTemplateName() }} -->
  <div class="container">
    <div class="page-header">
      <h1>{{ 'Login'|trans }} <small>kitFramework</small></h1>
    </div>
    
    {{ alert }}
    
    {% if alert|length < 1 %}
      {% include '@phpManufaktur/Basic/Template/default/pattern/bootstrap/alert.twig' 
        with {content:'Please login to the kitFramework with your username or email address and the assigned password. Your can also use your username and password for the CMS.'|trans} only %}
    {% endif %}
    
    <form class="form-horizontal" action="{{ FRAMEWORK_URL }}/admin/login_check" method="post" role="form">
      <div class="form-group">
        <label for="_username" class="col-sm-3 control-label required">{{ 'Username or email address'|trans }}</label>
        <div class="col-sm-6">
          <input class="form-control" autofocus type="text" name="_username" value="{{ last_username }}" />
        </div>
      </div>
      <div class="form-group">
        <label for="_password" class="col-sm-3 control-label required">{{ 'Password'|trans }}</label>
        <div class="col-sm-6">
          <input class="form-control" type="password" name="_password" value="" />
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <button type="submit" class="btn btn-default">{{ 'Login'|trans }}</button>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <p class="form-control-static"><a href="{{ FRAMEWORK_URL }}/password/forgotten">{{ 'Forgot your password?'|trans }}</a></p>
        </div>
      </div>
    </form>
  </div>
{% endblock %}