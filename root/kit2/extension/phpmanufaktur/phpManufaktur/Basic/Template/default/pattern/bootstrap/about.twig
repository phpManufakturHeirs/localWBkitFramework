<!-- {{ _self.getTemplateName() }} -->
<div id="about-wrap"
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 text-center">
      {# extension logo #}
      <img src="{{ FRAMEWORK_URL ~ extension.path ~ '/' ~ extension.logo.name|default('extension') ~ '.' ~ extension.logo.type|default('jpg') }}" width="200" height="200" title="{{ extension.name }}" alt="{{ extension.name }}" />
    </div>
    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12 text-left">
      <div class="lead">{{ extension.name }}</div>
      <div>{{ 'Release'|trans }} <strong>{{ extension.release.number }}</strong></div>
      <div class="small text-muted">
        {% if extension.license.name is defined %}
        {% if extension.license.url is defined %}
          {{ 'published at'|trans }} <strong>{{ extension.release.date|date('DATE_FORMAT'|trans) }}</strong>, {{ 'License'|trans }}: <a href="{{ extension.license.url }}" target="_blank">{{ extension.license.name }}</a>
        {% else %}
          {{ 'published at'|trans }} <strong>{{ extension.release.date|date('DATE_FORMAT'|trans) }}</strong>, {{ 'License'|trans }}: {{ extension.license.name }}
        {% endif %}
      {% else %}
        {{ 'published at'|trans }} <strong>{{ extension.release.date|date('DATE_FORMAT'|trans) }}</strong>  
      {% endif %}
      </div>
      <div>
        {% if attribute(extension.description, app.translator.locale).long is defined %}
          {{ attribute(extension.description, app.translator.locale).long }}
        {% elseif extension.description.en.long is defined %}
          {{ extension.description.en.long }}
        {% endif %}
      </div>
      <div>&nbsp;</div>
      <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right"></div>
        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left">
          <div><strong>{{ extension.vendor.name }}</strong></div>
          {% if extension.vendor.address.street is defined %}
            <div>{{ extension.vendor.address.street }}</div>
          {% endif %}
          {% if extension.vendor.address.zip is defined and extension.vendor.address.city is defined %}
            <div>{{ extension.vendor.address.zip }} {{ extension.vendor.address.city }}</div>
          {% endif %}
          {% if extension.vendor.address.country is defined %}
            <div class="small">{{ extension.vendor.address.country|trans }}</div>
          {% endif %}
          {% if extension.vendor.phone is defined %}
            <div class="small">{{ extension.vendor.phone }}</div>
          {% endif %}  
          {% if extension.vendor.email is defined %}
            <div class="small"><a href="mailto:{{ extension.vendor.email }}">{{ extension.vendor.email }}</a></div>
          {% endif %}  
          {% if extension.vendor.url is defined %}
            <div class="small"><a href="{{ extension.vendor.url }}" traget="_blank">{{ extension.vendor.url }}</a></div>
          {% endif %} 
        </div>
      </div>
      <div>&nbsp;</div>
      {% if attribute(extension.firststeps, app.translator.locale).url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'First steps'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ attribute(extension.firststeps, app.translator.locale).url }}" target="_blank">{{ attribute(extension.firststeps, app.translator.locale).url }}</a>
          </div>
        </div>  
      {% elseif extension.firststeps.en.url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'First steps'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ extension.firststeps.en.url }}" target="_blank">{{ extension.firststeps.en.url }}</a>
          </div>
        </div>
      {% endif %}
      {% if attribute(extension.wiki, app.translator.locale).url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'Documentation'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ attribute(extension.wiki, app.translator.locale).url }}" target="_blank">{{ attribute(extension.wiki, app.translator.locale).url }}</a>
          </div>
        </div>
      {% elseif extension.wiki.en.url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'Documentation'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ extension.wiki.en.url }}" target="_blank">{{ extension.wiki.en.url }}</a>
          </div>
        </div>
      {% endif %}
      {% if attribute(extension.issues, app.translator.locale).url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'Report problems'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ attribute(extension.issues, app.translator.locale).url }}" target="_blank">{{ attribute(extension.issues, app.translator.locale).url }}</a>
          </div>
        </div>
      {% elseif extension.issues.en.url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'Report problems'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ extension.issues.en.url }}" target="_blank">{{ extension.issues.en.url }}</a>
          </div>
        </div>
      {% endif %}
      {% if attribute(extension.support, app.translator.locale).url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'Support'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ attribute(extension.support, app.translator.locale).url }}" target="_blank">{{ attribute(extension.support, app.translator.locale).url }}</a>
          </div>
        </div>
      {% elseif extension.support.en.url is defined %}
        <div class="row">
          <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 text-right small"><em>{{ 'Support'|trans }}</em></div>
          <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8 text-left small">
            <a href="{{ extension.support.en.url }}" target="_blank">{{ extension.support.en.url }}</a>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>     