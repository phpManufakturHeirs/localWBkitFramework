{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'framework/body.twig') %}
{% block title %}
  {{ 'Create a new password'|trans }}
{% endblock %}
{% block content %}
  <!-- {{ _self.getTemplateName() }} -->
  <div class="container">
    <div class="page-header">
      <h1>{{ 'Create a new password'|trans }} <small>kitFramework</small></h1>
    </div>
    
    {{ alert }}
    
    {% form_theme form '@phpManufaktur/Basic/Template/default/framework/form.fields.horizontal.twig' %}
    
    <form class="form-horizontal" action="{{ FRAMEWORK_URL }}/password/retype" method="post" role="form">
      {{ form_widget(form) }}
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <button type="submit" class="btn btn-default">{{ 'Submit'|trans }}</button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
