{% block toolbar %}
  <ul class="nav nav-tabs">
    {% set default_link = FRAMEWORK_URL ~ '/flexcontent/editor/about' %}
    {% for item in toolbar %}
      <li{% if item.active %} class="active"{% endif %}>
        <a href="{{ item.link ~ '?usage=' ~ usage }}" title="{{ item.hint|trans }}">
          {%if item.name == 'list' %}
            <i class="fa fa-list"></i>
          {% elseif item.name == 'edit' %}
            <i class="fa fa-edit"></i>
          {% elseif item.name == 'tags' %}
            <i class="fa fa-tags"></i>
          {% elseif item.name == 'categories' %}
            <i class="fa fa-sitemap"></i>
          {% elseif item.name == 'rss' %}
            <i class="fa fa-rss"></i>
          {% elseif item.name == 'import' %}
            <i class="fa fa-download"></i>
          {% elseif item.name == 'about' %}
            <i class="fa fa-question"></i>
          {% endif %}
          {% if item.name != 'about' %}  
            <span class="visible-lg pull-right">&nbsp;{{ item.text|trans }}</span>
          {% endif %}
        </a>
      </li>
      {% if item.active %}
        {% set default_link = item.link %}
      {% endif %}
    {% endfor %}
    {% if usage is defined and usage != 'framework' %}
      <li>
        <a class="kitframework-icon" href="{{ default_link }}" title="{{ 'Open the %extension% extension in kitFramework'|trans({'%extension%':'flexContent'}) }}" target="_blank"><i class="fa fa-puzzle-piece"></i></a>
      </li>
    {% endif %}
  </ul>
{% endblock toolbar %}
