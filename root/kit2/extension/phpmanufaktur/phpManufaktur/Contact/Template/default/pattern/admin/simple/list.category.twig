{{ alert }}

<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <th>{{ 'ID'|humanize|trans }}</th>
      <th>{{ 'Category name'|trans }}</th>
      <th>{{ 'Category name (translated)'|trans }}</th>
      <th>{{ 'category_type_access'|humanize|trans }}</th>
      <th>{{ 'Category description'|trans }}</th>
      <th>{{ 'Category description (translated)'|trans }}</th>
    </thead>
    <tbody>
      {% for category in categories %}
        <tr>
          <td class="category_type_id"><a href="{{ FRAMEWORK_URL }}{{ route.edit|replace({'{category_id}':category.category_type_id}) }}">{{ '%03d'|format(category.category_type_id) }}</a></td>
          <td class="category_type_name"><a href="{{ FRAMEWORK_URL }}{{ route.edit|replace({'{category_id}':category.category_type_id}) }}">{{ category.category_type_name }}</a></td>
          <td class="category_type_name translated">{{ category.category_type_name }} &rArr; {{ category.category_type_name|humanize|trans }}</td>
          <td class="category_type_access">{{ category.category_type_access|humanize|trans }}</td>
          <td class="category_type_description">{{ category.category_type_description }}</td>
          <td class="category_type_description translated">{{ category.category_type_description|trans }}</td>            
        </tr>
      {% endfor %}
    </tbody>
  </table>    
</div>